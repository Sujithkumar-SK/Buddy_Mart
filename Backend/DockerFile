# ============================
# Stage 1: Build
# ============================
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copy solution and project files
COPY *.sln ./
COPY Kanini.Ecommerce.Api/*.csproj ./Kanini.Ecommerce.Api/
COPY Kanini.Ecommerce.Application/*.csproj ./Kanini.Ecommerce.Application/
COPY Kanini.Ecommerce.Data/*.csproj ./Kanini.Ecommerce.Data/
COPY Kanini.Ecommerce.Domain/*.csproj ./Kanini.Ecommerce.Domain/
COPY Kanini.Ecommerce.Common/*.csproj ./Kanini.Ecommerce.Common/
COPY Directory.Packages.props ./

# Clear NuGet cache and restore dependencies
RUN dotnet nuget locals all --clear
RUN dotnet restore

# Copy source code
COPY . .

# Build and publish
WORKDIR /src/Kanini.Ecommerce.Api
RUN dotnet publish -c Release -o /app/publish

# ============================
# Stage 2: Runtime
# ============================
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app

# Create non-root user
RUN adduser --disabled-password --gecos '' appuser && chown -R appuser /app
USER appuser

# Copy published app
COPY --from=build /app/publish .

# Expose port
EXPOSE 5108

# Set environment
ENV ASPNETCORE_URLS=http://+:5108
ENV ASPNETCORE_ENVIRONMENT=Production

# Start application
ENTRYPOINT ["dotnet", "Kanini.Ecommerce.Api.dll"]